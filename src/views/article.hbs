{{> navbar}}
<div class="container-home">
  <div class="title-home">
    <h1 class="transparent">{{title}}</h1>
  </div>
  <div class="text-home">
    <p class="transparent">{{content}}</p>
  </div>
  <div class="mt-3 d-flex gap-2">
    <a href="/articles/{{id}}/update">
      <button class="button-read">Editar</button>
    </a>
    <form action="/articles/{{id}}/delete" method="POST">
      <button type="submit" class="button-read">Eliminar</button>
    </form>
  </div>

  <div class="container-button">
    <div class="button-read">
      <a href="/recipes" class="text-decoration-none text-dark">Leer otras recetas</a>
    </div>
</div>
  
  {{> backhome}}
</div>